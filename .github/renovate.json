{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>jenkinsci/renovate-config"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "src/site/site.xml"
      ],
      "matchStrings": [
        "<version>(?<currentValue>.*?)</version>"
      ],
      "depNameTemplate": "org.apache.maven.skins:maven-fluido-skin",
      "datasourceTemplate": "maven"
    }
  ],
  "packageRules": [
    {
      "description": "Ignore core Maven internals handled by CI/runtime",
      "matchManagers": [
        "maven"
      ],
      "matchPackageNames": [
        "org.apache.maven:maven-artifact",
        "org.apache.maven:maven-core",
        "org.apache.maven:maven-model",
        "org.apache.maven:maven-model-builder",
        "org.apache.maven:maven-plugin-api",
        "org.apache.maven:maven-resolver-provider",
        "org.apache.maven:maven-settings"
      ],
      "enabled": false
    },
    {
      "description": "Allow only plexus-xml 4.x and newer",
      "matchManagers": [
        "maven"
      ],
      "matchPackageNames": [
        "org.codehaus.plexus:plexus-xml"
      ],
      "allowedVersions": ">=4.0.0"
    }
  ]
}
